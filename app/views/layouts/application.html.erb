<!DOCTYPE html>
<html>
<head>
  <title>TodoLists: <%= controller.action_name %></title>
  <%= stylesheet_link_tag 'style', 'form' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="wrapper">
	<div id="logo">
		<h1>Curso</h1>
		<p><em>Levando Conhecimento</em></p>

		<div id="menu-topo">
		  <% if user_signed_in? %>
	        <p> <em><b><%= link_to 'Index', root_path %></b></em> | <em><b><%= link_to('Edit', edit_user_registration_path) %></b></em> | <em><b><%=    link_to('Logout', destroy_user_session_path, :method => 'delete') %> </b></em></p>
	  <% else %>
	        <p> <em><b><%= link_to 'Index', root_path %></b></em> | <em><b><%= link_to('Login', :new_user_session ) %> </b></em></p>

	  <% end %>

	  </div>
	</div>
	<!-- end #logo -->
	<div id="page">
		<div id="page-bgtop">
			<div id="content">
				<p style="color: green"><%= flash[:notice] %></p>
				<%= yield %>
			</div>
			<!-- end #content -->
			<div style="clear: both;">&nbsp;</div>
		</div>
	</div>
	<!-- end #page -->
	<div id="footer">
		<p>Todos os direitos reservados. Design por <a href="http://www.meusite.com.br/">Meu Site</a>.</p>
	</div>
	<!-- end #footer -->
</div>
</body>
</html>

