<%= form_for [:admin, @instructor] do |f| %>
  <% if @instructor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@instructor.errors.count, "error") %> prohibited this instructor from being saved:</h2>

      <ul>
      <% @instructor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br />
  <br />
  <h2 align="center">Criando|Editando Cadastro de  instrutores</h2>
  <h4 align="center">Em cada campo, terá um aviso indicando sobre oque é preciso para preencher os dados corretamente </h4>
  <hr/>

  <div id="form">
    <p class="left"> <%= f.label 'name - Nome' %><br />
        <%= f.text_field :name, :class => 'input-grande', :placeholder => "ex: Eliaz Marcos"%></p>

    <p  class="right"> <%= f.label 'age - Idade' %><br />
        <%= f.text_field :age , :class => 'input-pequeno', :placeholder => "ex: 35" %></p>

    <p class="clear">
      <%= f.label 'experience - Experiencia' %><br />
      <%= f.text_area :experience, :rows => 15, :cols => 72, :placeholder => "Conte aqui neste espaço toda a esperiencia"%></p>

    <p>
      <%= f.label 'qualifications - Qualificações' %><br />
      <%= f.text_area :qualifications, :rows => 15, :cols => 72, :placeholder => "Conte aqui , os cursos que fez, suas qualificaçoes" %></p>

    <p>
      <%= f.label :hobbies %><br />
      <%= f.text_area :hobbies, :rows => 15, :cols => 72, :placeholder => "Conte aqui , ex:  Oque gosta de fazer nas horas vagas? pratica esportes?" %></p>

    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
<% end %>

